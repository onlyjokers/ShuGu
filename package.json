{
  "name": "shugu3",
  "version": "1.0.0",
  "description": "Interactive art performance system with manager, client and server",
  "private": true,
  "scripts": {
    "dev:all": "pnpm -r --parallel run dev",
    "dev:server": "pnpm --filter @shugu/server run dev",
    "dev:manager": "pnpm --filter @shugu/manager run dev",
    "dev:client": "pnpm --filter @shugu/client run dev",
    "e2e:node-executor": "node scripts/e2e/node-executor.mjs",
    "e2e:node-executor:offline": "pnpm --filter @shugu/sdk-client exec node scripts/e2e/node-executor.offline.mjs",
    "build:all": "pnpm -r run build",
    "lint": "ESLINT_USE_FLAT_CONFIG=true pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,svelte,js,json,css,md}\"",
    "clean": "pnpm -r run clean && rm -rf node_modules"
  },
  "keywords": [
    "interactive-art",
    "websocket",
    "svelte",
    "threejs"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.1",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "socket.io-client": "^4.7.2",
    "svelte-eslint-parser": "^1.4.1"
  }
}
