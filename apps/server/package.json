{
    "name": "@shugu/server",
    "version": "1.0.0",
    "description": "Socket.io server for interactive art system",
    "main": "./dist-server/main.js",
    "type": "module",
    "scripts": {
        "build": "pnpm exec nest build",
        "dev": "pnpm exec nest start --watch --path tsconfig.dev.json",
        "start": "node dist-server/main.js",
        "start:prod": "node dist-server/main.js",
        "lint": "ESLINT_USE_FLAT_CONFIG=true eslint \"src/**/*.ts\"",
        "clean": "rm -rf dist-local dist-dev"
    },
    "dependencies": {
        "@nestjs/common": "^10.3.0",
        "@nestjs/core": "^10.3.0",
        "@nestjs/platform-express": "^10.3.0",
        "@nestjs/platform-socket.io": "^10.3.0",
        "@nestjs/websockets": "^10.3.0",
        "@shugu/protocol": "workspace:*",
        "reflect-metadata": "^0.2.1",
        "rxjs": "^7.8.1",
        "socket.io": "^4.7.2"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.3.0",
        "@nestjs/schematics": "^10.1.0",
        "@types/node": "^20.10.0",
        "typescript": "^5.3.0"
    }
}
