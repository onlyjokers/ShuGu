{
    "name": "@shugu/sdk-client",
    "version": "1.0.0",
    "description": "Client SDK for Socket.io communication and state management",
    "main": "./dist-out/index.js",
    "module": "./dist-out/index.js",
    "types": "./dist-out/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist-out/index.d.ts",
            "import": "./dist-out/index.js"
        },
        "./client-sdk": {
            "types": "./dist-out/client-sdk.d.ts",
            "import": "./dist-out/client-sdk.js"
        }
    },
    "scripts": {
        "build": "pnpm exec tsc",
        "dev": "pnpm exec tsc --watch",
        "clean": "rm -rf dist-out",
        "lint": "ESLINT_USE_FLAT_CONFIG=true eslint \"src/**/*.ts\""
    },
    "files": [
        "dist-out"
    ],
    "dependencies": {
        "@shugu/multimedia-core": "workspace:*",
        "@shugu/node-core": "workspace:*",
        "@shugu/protocol": "workspace:*",
        "socket.io-client": "^4.7.2",
        "tone": "^14.8.49"
    },
    "devDependencies": {
        "typescript": "^5.3.0"
    }
}
